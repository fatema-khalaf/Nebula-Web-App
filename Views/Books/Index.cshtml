@section Style{
    <link rel="stylesheet" type="text/css" href="~/admin/src/plugins/datatables/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/src/plugins/datatables/css/responsive.bootstrap4.min.css">
}
@model IEnumerable<Nebula.VM.BooksVM>;

<div class="page-header">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Books</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Books</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-6 col-sm-12 text-right">
            <div class="dropdown">
                <a class="btn btn-danger btn-sm" href="@Url.Action("Create", controller:"Books")" role="button">
                    Add Book
                </a>
            </div>
        </div>
    </div>
</div>

<div class="pd-20 bg-white border-radius-4 box-shadow mb-30">
    <div class="card-box pb-10">
        <div class="h5 pd-20 mb-0">Authors</div>
        <table class="data-table table nowrap">
            <thead>
                <tr>
                    <th class="table-plus">ID</th>
                    <th>Book Name</th>
                    <th>Image</th>
                    <th>Publisher</th>
                    <th>Pages</th>
                    <th>Price</th>                  
                    <th class="datatable-nosort">Actions</th>
                    <th>Description</th>
                    <th>Creation Date</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var book in Model)
                {
                <tr>
                    <td>@book.Id</td>
                    <td><span class="badge badge-pill" data-bgcolor="#e7ebf5" data-color="#265ed7">@book.Name</span></td>
                    <td>
                        <div class="avatar mr-2 flex-shrink-0">
                            <img src="~/uploads/Books/@(book.ImageId).png" class="border-radius-100 shadow" style="width:50px; height:50px;" alt="">
                        </div>
                    <td>@book.Publisher</td>
                    <td>@book.pages</td>
                    <td>@book.Price</td>
                    
                    <td>
                        <div class="table-actions">
                            <a href="@Url.ActionLink("Edit",controller:"Books",values: new { id=book.Id} )" data-color="#265ed7"><i class="icon-copy dw dw-edit2"></i></a>
                            <a href="@Url.ActionLink("Delete",controller:"Books",values: new { id=book.Id} )" data-color="#e95959"><i class="icon-copy dw dw-delete-3"></i></a>
                        </div>
                    </td>
                    <td>@book.Description</td>
                    <td>@book.CreatedDate</td>
                </tr>

                }

            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/admin/src/plugins/apexcharts/apexcharts.min.js"></script>
    <script src="~/admin/src/plugins/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/admin/src/plugins/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/admin/src/plugins/datatables/js/dataTables.responsive.min.js"></script>
    <script src="~/admin/src/plugins/datatables/js/responsive.bootstrap4.min.js"></script>
    <script src="~/admin/vendors/scripts/dashboard3.js"></script>
}

